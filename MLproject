name: MLflow-app

conda_env: conda.yaml

entry_points:
  main:
    # main.py will run initially. main.py will decides how other stages will be executed through mlflow
    command: "python src/main.py"

  #stage-01
  get_data: 
    # stage_01_get_data.py file expects configuartion file, so we need to define it as parameters
    parameters:
      config: {type: str, default: "configs/config.yaml"}
    command: "python src/stage_01_get_data.py --config={config}"  
    #--config={config}.. it will take above line config parameters

  # stage-02
  base_model_creation:
    # stage_02_base_model_creation.py file expects configuartion file, so we need to define it as parameters
    parameters:
      config: {type: str, default: "configs/config.yaml"}
    command: "python src/stage_02_base_model_creation.py --config={config}" 
    #--config={config}.. it will take above line config parameters
    